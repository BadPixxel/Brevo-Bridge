{% if admin.hasAccess('show', object) and admin.hasRoute('show') %}
    <a 
        href="{{ admin.generateObjectUrl('refresh', object) }}"
        class="btn btn-sm btn-primary view_link"
        title="Refresh Status"
        >
        <i class="fa fa-refresh" aria-hidden="true"></i>
    </a>
{% endif %}